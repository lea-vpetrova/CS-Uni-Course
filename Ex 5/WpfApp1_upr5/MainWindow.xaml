<Window x:Class="WpfApp1_upr5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Async Demo" Height="300" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Top">

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Count to:" VerticalAlignment="Center" Width="80"/>
            <TextBox Name="txtCountTo" Width="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Delay (ms):" VerticalAlignment="Center" Width="80"/>
            <TextBox Name="txtDelay" Width="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Name="btnStartAsync" Content="Start Async" Width="120" Height="30" Margin="5"
            Click="btnStartAsync_Click"/>
            <Button Name="btnStartSync" Content="Start Sync" Width="120" Height="30" Margin="5"
            Click="btnStartSync_Click"/>
        </StackPanel>
        <Label x:Name="lblSyncMsg" Foreground="Red" FontSize="14" Visibility="Collapsed"/>

        <Label Name="lblBefore" FontSize="16" Margin="0,10,0,0"/>
        <Label Name="lblNumber" FontSize="32" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Label Name="lblAfter" FontSize="16" Margin="0,10,0,0"/>

    </StackPanel>
</Window>
